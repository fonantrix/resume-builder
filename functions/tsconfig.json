{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"]
    }    
  },
  "typeRoots": [ "node_modules/@types" ],  
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
